{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES6",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "composite": false,
        "paths": {
            "@/*": ["./src/*"],
            "@shop/*": [
                "../../services/shop/src/*"
            ],
            "@product/*": [
                "../../services/product/src/*"
            ],
            "@packages/*": [
                "../../packages/shared/src"
            ]
        }
    },
    "include": [
        "src"
    ]
}