{
  "name": "monorepo-nestjs-backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "scripts": {
    "start:database": "cd services/database && npm run start:dev",
    "start:productService": "cd services/product-service && npm run start:dev",
    "start:authService": "cd services/auth-service && npm run start:dev",
    "start:adminService": "cd services/admin-service && npm run start:dev",
    "start:backend": "concurrently \"npm run start:database\" \"npm run start:productService\" \"npm run start:authService\" \"npm run start:adminService\"",
    
    "start:dev": "concurrently \"npm run start:backend\"",
    
    "prisma:generate": "cd services/database && npx prisma generate",
    "prisma": "cd services/database && npx prisma studio"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}