{
  "name": "monorepo-nestjs-backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "scripts": {
    "start:database": "cd services/database && npm run start:dev",
    "start:productService": "cd services/product-service && npm run start:dev",
    "start:authService": "cd services/auth-service && npm run start:dev",
    "start:adminService": "cd services/admin-service && npm run start:dev",
    "start:orderService": "cd services/order-service && npm run start:dev",

    "build:shared:watch": "cd packages/shared && npm run build:watch",
    "build:config:watch": "cd packages/config && npm run build:watch",


    "start:backend": "concurrently \"npm run build:shared:watch\" \"npm run build:config:watch\" \"npm run start:database\" \"npm run start:productService\" \"npm run start:authService\" \"npm run start:adminService\" \"npm run start:orderService\"",
    "start:dev": "npm run start:backend",
    "prisma:generate": "cd services/database && npx prisma generate",
    "prisma": "cd services/database && npx prisma studio"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/throttler": "^6.4.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "class-validator": "^0.14.1",
    "dotenv": "^16.6.1",
    "nodemailer": "^7.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
